@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Ana Sayfa Başlığı -->
<div class="text-center py-5 bg-light">
    <h1 class="display-4 text-uppercase font-weight-bold">Barber Shop'a Hoş Geldiniz</h1>
    <p class="lead text-muted">Profesyonel saç ve sakal hizmetleri için doğru yerdesiniz!</p>
</div>

<!-- Ana İçerik -->
<div class="container my-5">
    <!-- Salon Hizmetleri -->
    <section class="mb-5">
        <h1 class="text-center mb-4 text-dark">Salon Hizmetleri</h1>
        <div class="row g-4">
            <!-- Hizmet Kartları -->
            <div class="col-lg-3 col-md-6">
                <div class="card h-100 shadow border-0">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary font-weight-bold">Saç Kesimi</h5>
                        <p class="card-text text-muted">Stilinize uygun profesyonel saç kesimi</p>
                        <span class="badge bg-success text-white py-2 px-3">₺250</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="card h-100 shadow border-0">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary font-weight-bold">Sakal Şekillendirme</h5>
                        <p class="card-text text-muted">Düzenleme ve şekillendirme</p>
                        <span class="badge bg-success text-white py-2 px-3">₺150</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="card h-100 shadow border-0">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary font-weight-bold">Saç Boyama</h5>
                        <p class="card-text text-muted">Tarzınıza uygun saç boyama seçenekleri</p>
                        <span class="badge bg-success text-white py-2 px-3">₺500</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="card h-100 shadow border-0">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary font-weight-bold">Şampuan ve Şekillendirme</h5>
                        <p class="card-text text-muted">Derinlemesine bakım ve şekillendirme</p>
                        <span class="badge bg-success text-white py-2 px-3">₺200</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Berberler -->
    <section>
        <h1 class="text-center mb-4 text-dark">Berberlerimiz</h1>
        <div class="row g-4">
            <!-- Berber Kartları -->
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-lg border-0">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary font-weight-bold">Mehmet Berber</h5>
                        <p class="card-text text-muted">Uzmanlık: Klasik saç kesimleri, sakal şekillendirme</p>
                        <button class="btn btn-outline-primary btn-sm mt-3">Detaylı Bilgi</button>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-lg border-0">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary font-weight-bold">Kemal Berber</h5>
                        <p class="card-text text-muted">Uzmanlık: Saç boyama, modern stiller</p>
                        <button class="btn btn-outline-primary btn-sm mt-3">Detaylı Bilgi</button>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-lg border-0">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary font-weight-bold">Hakan Berber</h5>
                        <p class="card-text text-muted">Uzmanlık: Saç ve deri bakımı, cilt bakımı</p>
                        <button class="btn btn-outline-primary btn-sm mt-3">Detaylı Bilgi</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
