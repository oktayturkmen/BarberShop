@model Barbershop.Models.Haircut

@{
    ViewData["Title"] = "Delete";
      <!-- Sayfanın başlığı "Delete" olarak ayarlanır -->
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3> <!-- Kullanıcıya silme işlemiyle ilgili onay mesajı gösterilir -->
<div>
    <h4>Haircut</h4>
    <hr />
    <dl class="row">
        <!-- Verilen bilgiler için liste başlatılır -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)  <!-- Saç kesimi adının başlığı gösterilir -->
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)  <!-- Saç kesimi adı değeri görüntülenir -->
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)  <!-- Saç kesiminin süresinin başlığı gösterilir -->
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration)  <!-- Saç kesiminin süresi değeri görüntülenir -->
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)  <!-- Saç kesiminin fiyatının başlığı gösterilir -->
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)  <!-- Saç kesiminin fiyatı değeri görüntülenir -->
        </dd>
    </dl>

    <!-- Silme işlemini gerçekleştirecek form -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="HaircutId" />  <!-- Saç kesimi ID'si gizli alanda gönderilir -->
        <input type="submit" value="Delete" class="btn btn-danger" /> <!-- Silme butonu -->
        |
        <a asp-action="Index">Back to List</a>  <!-- Listeye dönmek için link -->
    </form>
</div>
