@model Barbershop.Models.Barber  

@{
    ViewData["Title"] = "Delete";  <!-- Sayfa başlığı "Delete" olarak ayarlanır -->
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>  <!-- Kullanıcıya silme işlemi için onay mesajı gösterilir -->
<div>
    <h4>Barber</h4>
    <hr />
    <dl class="row">  <!-- Verilen bilgiler için liste başlatılır -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BarberName)  <!-- Berberin adı için başlık gösterilir -->
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BarberName)  <!-- Berberin adı değeri görüntülenir -->
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Specialization)  <!-- Berberin uzmanlık alanı başlığı gösterilir -->
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specialization)  <!-- Berberin uzmanlık alanı değeri görüntülenir -->
        </dd>
    </dl>

    <!-- Silme işlemini gerçekleştirecek form -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="BarberId" />  <!-- Berberin ID'si gizli alanda gönderilir -->
        <input type="submit" value="Delete" class="btn btn-danger" />  <!-- Silme butonu -->
        |
        <a asp-action="Index">Back to List</a>  <!-- Listeye dönmek için link -->
    </form>
</div>
